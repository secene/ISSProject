@model Product

@{
    ViewBag.Title = "Order";
    Layout = "_Layout";
}

<h1>Order</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Order">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ModificationData" class="control-label"></label>
                <input asp-for="ModificationData" class="form-control"/>
                <span asp-validation-for="ModificationData" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" readonly="readonly" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WantedQuantity" class="control-label"></label>
                <input asp-for="WantedQuantity" class="form-control"/>
                <span asp-validation-for="WantedQuantity" class="text-danger"></span>
            </div>          
            <div class="form-group">
                    <input type="submit" value="Order" class="btn btn-outline-success"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}